        <%= simple_form_for @shirt_number do |f| %>
          <h1><%= @shirt_number.class %></h1>

          <%= f.input :number, as: :integer, wrapper_html: { data: { shirt_number_target: 'wrapper' } }, input_html: { data: { shirt_number_target: 'input', action: 'change->shirt-number#update keyup->shirt-number#update' } }  %>
          <%= button_tag 'FanMatch!', type: :button, class: 'btn btn-primary w-100', data: { action: 'click->shirt-number#match', shirt_number_target: 'match' } %>
          <div class="row justify-content-center d-none" data-shirt-number-target='card'>
            <div class="col-12">
              <%= render 'fan/fifa_card' %>
              <%= f.submit 'PrÃ³ximo', disabled: true, class: 'btn btn-primary w-100 mt-3 d-none', data: { shirt_number_target: 'submit' } %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
