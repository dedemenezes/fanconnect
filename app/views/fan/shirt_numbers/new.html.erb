<div class="container">
  <div class="row justify-content-center" data-controller="shirt-number" data-shirt-number-url-value="/fan/shirt_numbers">
    <div class="col-12 col-md-8 col-lg-3">
      <%= simple_form_for @shirt_number, html: { class: 'form-card' } do |f| %>
        <h1><%= @shirt_number.class %></h1>

        <%= f.input :number, as: :integer, wrapper_html: { data: { shirt_number_target: 'wrapper' } }, input_html: { data: { shirt_number_target: 'input', action: 'change->shirt-number#update keyup->shirt-number#update' } }  %>
        <%= f.submit 'PrÃ³ximo', disabled: true, class: 'btn btn-primary d-none', data: { shirt_number_target: 'submit' } %>
        <%= button_tag 'FanMatch!', type: :button, class: 'btn btn-primary', data: { action: 'click->shirt-number#match', shirt_number_target: 'match' } %>
        <div class="row justify-content-center d-none" data-shirt-number-target='card'>
          <div class="col-12">
            <div class="match__card shadow-sm">
              <div class="num-jogador" style="background-image: url(<%= image_path('bg-numero.png') %>)">
                <div class="match__card__content match__card--inner-flex">
                  <%= image_tag 'Luan-14.png' %>
                  <span class='num-camisa' data-shirt-number-target='result'>13</span>
                </div>
                <p>Kayke</p>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>

</div>
