<div class="container">
  <div class="row justify-content-center" data-controller="weight" data-weight-url-value="/fan/weights">
    <div class="col-12 col-md-8 col-lg-3">
      <%= simple_form_for @weight do |f| %>
        <h1 class="question">Qual é o seu peso atual?</h1>
          <%= f.input :number, as: :integer, label: false, wrapper_html: { data: { weight_target: 'wrapper' } }, input_html: { data: { weight_target: 'input', action: 'change->weight#update keyup->weight#update' } }  %>
        <div class="d-flex justify-content-center">
          <%= button_tag 'Verificar Peso', type: :button, class: 'btn btn-success w-100 d-none', data: { action: 'click->weight#match', weight_target: 'match' } %>
        </div>
        <div class="row justify-content-center d-none" data-weight-target='card'>
          <div class="col-12">
            <!-- Aqui, você pode renderizar um partial relevante ao contexto de peso -->
            <%= render 'fan/fifa_card' %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit 'Próximo', class: 'btn btn-success w-50 mt-3', data: { weight_target: 'submit' } %>
        </div>

      <% end %>
    </div>
  </div>
</div>
