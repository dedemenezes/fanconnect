<div class="container">
  <div class="row justify-content-center" data-controller="favorite-drink" data-favorite-drink-url-value="/fan/favorite_drinks">
    <div class="col-12 col-md-8 col-lg-3">
      <%= simple_form_for @favorite_drink do |f| %>
        <h1 class="question">Qual é a sua bebida favorita?</h1>
          <%= f.input :string, as: :string, label: false, wrapper_html: { data: { favorite_drink_target: 'wrapper' } }, input_html: { data: { favorite_drink_target: 'input', action: 'change->favorite-drink#update keyup->favorite-drink#update' } }  %>
        <div class="d-flex justify-content-center">
          <%= button_tag 'Confirmar Bebida', type: :button, class: 'btn btn-success w-100 d-none', data: { action: 'click->favorite-drink#match', favorite_drink_target: 'match' } %>
        </div>
        <div class="row justify-content-center d-none" data-favorite-drink-target='card'>
          <div class="col-12">
            <!-- Aqui, você pode renderizar um partial específico ou alguma representação visual associada à bebida favorita -->
            <%= render 'fan/fifa_card' %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit 'Próximo', class: 'btn btn-success w-50 mt-3', data: { favorite_drink_target: 'submit' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
