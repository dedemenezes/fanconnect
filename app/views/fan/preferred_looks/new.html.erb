<div class="container">
  <div class="row justify-content-center" data-controller="preferred-look" data-preferred-look-url-value="/fan/preferred_looks">
    <div class="col-12 col-md-8 col-lg-3">
      <%= simple_form_for @preferred_look do |f| %>
        <h1 class="question">Qual é o seu look preferido?</h1>
          <%= f.input :string, as: :string, label: false, wrapper_html: { data: { preferred_look_target: 'wrapper' } }, input_html: { data: { preferred_look_target: 'input', action: 'change->preferred-look#update keyup->preferred-look#update' } }  %>
        <div class="d-flex justify-content-center">
          <%= button_tag 'Confirmar Look', type: :button, class: 'btn btn-success w-100 d-none', data: { action: 'click->preferred-look#match', preferred_look_target: 'match' } %>
        </div>
        <div class="row justify-content-center d-none" data-preferred-look-target='card'>
          <div class="col-12">
            <!-- Aqui, você pode renderizar um partial relevante ao contexto de look preferido -->
            <%= render 'fan/fifa_card' %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit 'Próximo', class: 'btn btn-success w-50 mt-3', data: { preferred_look_target: 'submit' } %>
        </div>

      <% end %>
    </div>
  </div>
</div>
